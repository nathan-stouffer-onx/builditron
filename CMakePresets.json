{
  "version": 8,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
        "name": "deps",
        "hidden": true,
        "inherits": "base",
        "toolchainFile": "${sourceDir}/code/deps/vcpkg/scripts/buildsystems/vcpkg.cmake"
    },
    {
        "name": "deps-win",
        "hidden": true,
        "inherits": "deps",
        "cacheVariables": {
            "VCPKG_TARGET_TRIPLET": "x64-windows-static"
        }
    },
    {
        "name": "deps-mac",
        "hidden": true,
        "inherits": "deps",
        "cacheVariables": {
            "VCPKG_TARGET_TRIPLET": "arm64-osx"
        }
    },
    {
      "name": "env-win-msvc-vs",
      "hidden": true,
      "inherits": "deps-win",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "env-mac-clang-ninja",
      "hidden": true,
      "inherits": "deps-mac",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "targ-win",
      "inherits": "env-win-msvc-vs"
    },
    {
      "name": "targ-mac-debug",
      "inherits": "env-mac-clang-ninja"
    },
    {
      "name": "targ-mac-relwithdebinfo",
      "inherits": "env-mac-clang-ninja"
    },
    {
      "name": "targ-mac-release",
      "inherits": "env-mac-clang-ninja"
    },
    {
      "name": "targ-mac-minsizerel",
      "inherits": "env-mac-clang-ninja"
    }
  ],
  "buildPresets": [
    {
      "name": "targ-win-debug",
      "configurePreset": "targ-win",
      "configuration": "Debug"
    },
    {
      "name": "targ-win-relwithdebinfo",
      "configurePreset": "targ-win",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "targ-win-release",
      "configurePreset": "targ-win",
      "configuration": "Release"
    },
    {
      "name": "targ-win-minsizerel",
      "configurePreset": "targ-win",
      "configuration": "MinSizeRel"
    },
    {
      "name": "targ-mac-debug",
      "configurePreset": "targ-mac-debug"
    },
    {
      "name": "targ-mac-relwithdebinfo",
      "configurePreset": "targ-mac-relwithdebinfo"
    },
    {
      "name": "targ-mac-release",
      "configurePreset": "targ-mac-release"
    },
    {
      "name": "targ-mac-minsizerel",
      "configurePreset": "targ-mac-minsizerel"
    }
  ]
}
