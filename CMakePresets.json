{
  "version": 8,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "deps",
      "hidden": true,
      "inherits": "base",
      "toolchainFile": "${sourceDir}/code/deps/vcpkg/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "deps-win",
      "hidden": true,
      "inherits": "deps",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "deps-mac",
      "hidden": true,
      "inherits": "deps",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-osx"
      }
    },
    {
      "name": "env-win-msvc-vs",
      "hidden": true,
      "inherits": "deps-win",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "env-win-msvc-ninja",
      "hidden": true,
      "inherits": "deps-win",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "env-mac-clang-ninja",
      "hidden": true,
      "inherits": "deps-mac",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "targ-win-vs",
      "inherits": "env-win-msvc-vs"
    },
    {
        "name": "targ-win-ninja-Debug",
        "inherits": "env-win-msvc-ninja",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug"
        }
    },
    {
        "name": "targ-win-ninja-RelWithDebInfo",
        "inherits": "env-win-msvc-ninja",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "RelWithDebInfo"
        }
    },
    {
        "name": "targ-win-ninja-Release",
        "inherits": "env-win-msvc-ninja",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release"
        }
    },
    {
        "name": "targ-win-ninja-MinSizeRel",
        "inherits": "env-win-msvc-ninja",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "MinSizeRel"
        }
    },
    {
      "name": "targ-mac-Debug",
      "inherits": "env-mac-clang-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "targ-mac-RelWithDebInfo",
      "inherits": "env-mac-clang-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "targ-mac-Release",
      "inherits": "env-mac-clang-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "targ-mac-MinSizeRel",
      "inherits": "env-mac-clang-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "targ-win-vs-Debug",
      "configurePreset": "targ-win-vs",
      "configuration": "Debug"
    },
    {
      "name": "targ-win-vs-RelWithDebInfo",
      "configurePreset": "targ-win-vs",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "targ-win-vs-Release",
      "configurePreset": "targ-win-vs",
      "configuration": "Release"
    },
    {
      "name": "targ-win-vs-MinSizeRel",
      "configurePreset": "targ-win-vs",
      "configuration": "MinSizeRel"
    },
    {
      "name": "targ-win-ninja-Debug",
      "configurePreset": "targ-win-ninja-Debug"
    },
    {
      "name": "targ-win-ninja-RelWithDebInfo",
      "configurePreset": "targ-win-ninja-RelWithDebInfo"
    },
    {
      "name": "targ-win-ninja-Release",
      "configurePreset": "targ-win-ninja-Release"
    },
    {
      "name": "targ-win-ninja-MinSizeRel",
      "configurePreset": "targ-win-ninja-MinSizeRel"
    },
    {
      "name": "targ-mac-Debug",
      "configurePreset": "targ-mac-Debug"
    },
    {
      "name": "targ-mac-RelWithDebInfo",
      "configurePreset": "targ-mac-RelWithDebInfo"
    },
    {
      "name": "targ-mac-Release",
      "configurePreset": "targ-mac-Release"
    },
    {
      "name": "targ-mac-MinSizeRel",
      "configurePreset": "targ-mac-MinSizeRel"
    }
  ]
}
